		super();
		this.itemList = itemList;
	}

	public List<IItems> getItemList() {
		return itemList;
	}

	public void setItemList(List<IItems> itemList) {
		this.itemList = itemList;
	}
	
	public void addItemsToCart(List<IItem> itemList)
	{
		itemList= Arrays.asList(new Biscuit("PARLE G",10.0),
				 new Chocolate("Cadbury",50.0),
				 new HatAdapter(new Hat("KAAN","TOPI",100.0,50.0)));

	}
	
	public void getCartItems()
	{
		
	}
	
	
}
